<div style="height:600px; overflow-y: scroll;">
<h4>Recently Found Blocks:</h4>
{{#if model.candidates}}
<div class="table-responsive">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Height</th>
      <th>Time Found</th>
      <th>Variance</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.candidates as |block|}}
    <tr>
      <td><a href="{{config.BlockAddress}}{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
      <td>{{format-date-locale block.timestamp}}</td>
      <td>
        {{#if block.isLucky}}
        <span class="label label-success">{{format-number block.variance style='percent'}}</span>
        {{else}}
        <span class="label label-info">{{format-number block.variance style='percent'}}</span>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
{{else}}
<h3>-</h3>
{{/if}}

<h4>Immature Blocks:</h4>
{{#if model.immature}}
<div class="table-responsive">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Height</th>
      <th>Block Hash</th>
      <th>Time Found</th>
      <th>Variance</th>
      <th>Reward</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.immature as |block|}}
      {{partial "blocks/block"}}
    {{/each}}
  </tbody>
</table>
</div>
{{else}}
<h3>No Immature Blocks</h3>
{{/if}}

<h4>Matured Blocks:</h4>
{{#if model.matured}}
<h4>Matured Blocks</h4>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Height</th>
        <th>Block Hash</th>
        <th>Time Found</th>
        <th>Variance</th>
        <th>Reward</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.matured as |block|}}
        {{partial "blocks/block"}}
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<h3>No matured blocks yet</h3>
{{/if}}
</div>
